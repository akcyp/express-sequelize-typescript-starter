{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ES2020"],
    "outDir": "lib",
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "downlevelIteration": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}